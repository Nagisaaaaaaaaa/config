// place your key bindings in this file to override the defaults
[
    {
        "key": "escape",
        "command": "runCommands",
        "when": "editorTextFocus && neovim.mode == normal",
        "args": {
            "commands": [
                "bookmarks.clearFromAllFiles",
                "textmarker.clearAllHighlight",
            ]
        },
    },







    {
        "key": "ctrl+d",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>"
    },
    {
        "key": "ctrl+f",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>A;<ESC>"
    },
    
    





    {
        "key": "ctrl+j",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<DOWN>"
    },
    {
        "key": "ctrl+k",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<UP>"
    },
    {
        "key": "ctrl+h",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<LEFT>"
    },
    {
        "key": "ctrl+l",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<RIGHT>"
    },
    {
        "key": "ctrl+e",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>ea"
    },
    {
        "key": "ctrl+b",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>bi"
    },
    {
        "key": "ctrl+a",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>A"
    },
    {
        "key": "ctrl+i",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>I"
    },
    
    

    {
        "key": "ctrl+c",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>ciw"
    },
    {
        "key": "ctrl+v",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == insert",
        "args": "<ESC>pa"
    },
    


    

    

    {
        "key": "ctrl+j",
        "command": "runCommands",
        "when": "editorTextFocus && neovim.mode == normal",
        "args": {
            "commands": [ "scrollLineDown",
                          "cursorDown",
                          "scrollLineDown",
                          "cursorDown",
                          "scrollLineDown",
                          "cursorDown",
                          "scrollLineDown",
                          "cursorDown",
                          "scrollLineDown",
                          "cursorDown" ],
        }
    },
    {
        "key": "ctrl+k",
        "command": "runCommands",
        "when": "editorTextFocus && neovim.mode == normal",
        "args": {
            "commands": [ "scrollLineUp",
                          "cursorUp",
                          "scrollLineUp",
                          "cursorUp",
                          "scrollLineUp",
                          "cursorUp",
                          "scrollLineUp",
                          "cursorUp",
                          "scrollLineUp",
                          "cursorUp" ],
        }
    },
    
    

    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.focusBelowGroup",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.focusRightGroup",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    

    
    {
        "key": "z",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == normal",
        "args": "zz"
    },
    {
        "key": "ctrl+z",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.mode == normal",
        "args": "zz"
    },
    

    
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    

    
    {
        "key": "ctrl+n",
        "command": "editor.fold",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "ctrl+m",
        "command": "editor.unfold",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    

    
    {
        "key": "ctrl+=",
        "command": "editor.action.fontZoomIn",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    {
        "key": "ctrl+-",
        "command": "editor.action.fontZoomOut",
        "when": "editorTextFocus && neovim.mode == normal",
    },
    


    {
        "key": "ctrl+u",
        "command": "cursorPageUp",
        "when": "editorTextFocus && neovim.mode == normal"
    },
    {
        "key": "ctrl+d",
        "command": "cursorPageDown",
        "when": "editorTextFocus && neovim.mode == normal"
    },
    

    
    {
        "key": "ctrl+f",
        "command": "workbench.action.findInFiles",
        "when": "editorTextFocus && neovim.mode == normal"
    },
    {
        "key": "ctrl+e",
        "command": "workbench.view.explorer",
        "when": "editorTextFocus && neovim.mode == normal"
    },
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus && neovim.mode == normal"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!editorTextFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!editorTextFocus"
    },
]
