{
    "cSpell.userWords": [
        "constexpr",
        "Cumulant",
        "glfw",
        "MULTISAMPLE",
        "octree"
    ],

    "git.autofetch": true,
    "window.zoomLevel": 1,
    "cmake.configureOnOpen": true,

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    "vscode-neovim.neovimExecutablePaths.win32": "C:/tools/neovim/nvim-win64/bin/nvim.exe",
    
    "editor.scrollBeyondLastLine": true,
    
    "editor.lineNumbers": "relative",
    
    "editor.tabSize": 2,
    
    "files.autoSave": "onWindowChange",
    
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.mouseWheelScrollSensitivity": 0.5,
    "workbench.list.mouseWheelScrollSensitivity": 0.5,
    "terminal.integrated.mouseWheelScrollSensitivity": 0.5,
    
    "editor.mouseWheelZoom": true,
    
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",

    "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
    
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    
    "workbench.colorCustomizations": {
        "editorLineNumber.activeForeground": "#CDC8D3",
        "editorLineNumber.dimmedForeground": "#CDC8D3",
        "editorLineNumber.foreground": "#CDC8D3",

        "editor.findMatchHighlightBackground": "#376243",
        
        "editor.lineHighlightBackground": "#363536",
        "editor.selectionBackground": "#69666A"
    },
    "editor.tokenColorCustomizations": {
        "comments": "#808080"
    },
    "textmarker.defaultHighlightOpacity": 0.7,
    
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF4B4B",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "/",
            "color": "#6CA65E",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fixme",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],

    "background.style": {
        "opacity": 0.3,
        "loop": true
    }
}
